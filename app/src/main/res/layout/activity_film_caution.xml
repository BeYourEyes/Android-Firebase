<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32sp"
    tools:context=".FilmCautionActivity" >

    <TextView
        android:id="@+id/filmCautionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:fontFamily="@font/pretendard700"
        android:text="촬영 시 주의 사항"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:fontFamily="@font/pretendard500"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:background="@drawable/edge"
        android:padding="20sp"
        android:text = "@string/caution">
    </TextView>

    <Button
        android:id="@+id/filmStartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="12sp"
        android:layout_marginRight="100sp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/pretendard700"
        android:text="촬영 시작하기" />
</LinearLayout>