<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32sp"
    tools:context=".TodayIntakeActivity"
    tools:ignore="SpeakableTextPresentCheck">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/pretendard800"
        android:text="영양 정보 촬영하기"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="36sp"
                android:orientation="horizontal"
                android:weightSum="7">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/highlight"
                        android:fontFamily="@font/pretendard700"
                        android:text="오늘 섭취한"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:background="@color/highlight"
                        android:fontFamily="@font/pretendard700"
                        android:text="칼로리는"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:background="@color/highlight"
                        android:fontFamily="@font/pretendard700"
                        android:text="500kcal"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/white"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:fontFamily="@font/pretendard700"
                        android:text="이에요"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/highlight"
                        android:textSize="28sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36sp"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3sp"
                    android:fontFamily="@font/pretendard700"
                    android:layout_weight="1"
                    android:text="어제보다"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/highlight"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard800"
                    android:text="500kcal"
                    android:textAlignment="center"
                    android:textColor="@color/highlight"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard700"
                    android:text="덜 섭취했어요"
                    android:textAlignment="viewStart"
                    android:textColor="@color/highlight"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3sp"
                    android:fontFamily="@font/pretendard700"
                    android:layout_weight="1"
                    android:text="조금만"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/highlight"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard800"
                    android:text="더!"
                    android:textAlignment="center"
                    android:textColor="@color/highlight"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard700"
                    android:text="드셔보세요"
                    android:textAlignment="viewStart"
                    android:textColor="@color/highlight"
                    android:textSize="20sp" />
            </LinearLayout>




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="72sp"
                android:background="@drawable/button_default"
                android:fontFamily="@font/pretendard700"
                android:text="질환 별 정보 보기"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonVoiceScanSuccess"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16sp"
                android:background="@drawable/button_default"
                android:fontFamily="@font/pretendard700"
                android:text="음성으로 듣기"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonIntake"
            android:layout_width="match_parent"
            android:layout_height="64sp"
            android:layout_weight="1"
            android:layout_marginEnd="6sp"
            android:background="@drawable/button_highlight"
            android:fontFamily="@font/pretendard700"
            android:text="먹을게요!"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonGoHomeScanSuccess"
            android:layout_width="match_parent"
            android:layout_height="64sp"
            android:layout_weight="1"
            android:layout_marginStart="6sp"
            android:background="@drawable/button_highlight"
            android:fontFamily="@font/pretendard700"
            android:text="돌아가기"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>