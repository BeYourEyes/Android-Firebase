<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32sp"
    tools:context=".TodayIntakeActivity"
    tools:ignore="SpeakableTextPresentCheck">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/pretendard800"
        android:text="영양 정보 촬영하기"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/pretendard900"
        android:text="2024년 12월 25일"
        android:textAlignment="center"
        android:textColor="@color/highlight"
        android:textSize="24sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="360sp"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36sp"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3sp"
                    android:fontFamily="@font/pretendard700"
                    android:layout_weight="1"
                    android:text="총 섭취한 칼로리는"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard800"
                    android:text="500kcal"
                    android:textAlignment="center"
                    android:textColor="@color/highlight"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard700"
                    android:text="입니다"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3sp"
                    android:fontFamily="@font/pretendard700"
                    android:layout_weight="1"
                    android:text="조금만"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/highlight"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard800"
                    android:text="더!"
                    android:textAlignment="center"
                    android:textColor="@color/highlight"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard700"
                    android:text="드셔보세요"
                    android:textAlignment="viewStart"
                    android:textColor="@color/highlight"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="16sp"
                android:text="탄수화물"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard700"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/carboBarchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="16sp"
                android:text="지방"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard700"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/fatBarchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="16sp"
                android:text="단백질"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard700"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/proteinBarchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="16sp"
                android:text="나트륨"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard700"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/sodiumBarchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="16sp"
                android:text="콜레스테롤"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard700"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/cholesterolBarchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonGoHomeScanSuccess"
            android:layout_width="match_parent"
            android:layout_height="64sp"
            android:layout_weight="1"
            android:layout_marginStart="6sp"
            android:background="@drawable/button_highlight"
            android:fontFamily="@font/pretendard700"
            android:text="설명듣기"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </LinearLayout>

</LinearLayout>